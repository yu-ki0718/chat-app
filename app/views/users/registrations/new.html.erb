<div class="top-divise">
  <div class="top-box">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="circle-avatar">
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "nickname", class:"form" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以内)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form" %>
      </div>

      <div class="field">
        <%= f.label :パスワードの確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form" %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>